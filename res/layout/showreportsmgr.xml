<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#fff">
    <LinearLayout android:layout_gravity="top" android:id="@+id/Title" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center_vertical">
        <ImageView android:id="@+id/imageView1" android:src="@drawable/apartment" android:scaleType="fitXY" android:layout_height="100dip" android:layout_width="100dip" android:layout_gravity="center_horizontal"></ImageView>
        <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="wrap_content">
            <TextView android:textColor="#000" android:id="@+id/textView1" android:text="TenManComm" android:layout_width="wrap_content" android:textSize="25dip" android:layout_height="wrap_content" android:paddingLeft="10dip" android:paddingTop="10dip" android:paddingBottom="5dip" android:textStyle="bold|italic"></TextView>
            <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#666" android:textSize="20dip" android:paddingLeft="10dip" android:textStyle="italic" android:text="Manager"></TextView>
        </LinearLayout>
    </LinearLayout>
        <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dip">
	    <TableLayout
		    android:layout_height="fill_parent"
		    android:layout_width="fill_parent"
		    android:id="@+id/list" android:shrinkColumns="1" android:stretchColumns="1">
		    <TableRow
		        android:layout_marginBottom="3dip">
		        <ImageView android:id="@+id/hdrFlag" android:src="@drawable/grayflag" android:visibility="invisible" android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="3dip"></ImageView>
		        <TextView
		            android:textStyle="bold" android:textSize="17sp" android:textColor="#000" android:text="Reports" android:id="@+id/hdrReports"/>
		        <TextView
		            android:text="Date"
		            android:textStyle="bold" android:textSize="17sp" android:textColor="#000" android:id="@+id/hdrDate"/>
		        <TextView
                    android:textStyle="bold" android:textSize="17sp" android:textColor="#000" android:text="Severity" android:id="@+id/hdrSeverity"/>
		    </TableRow>
		    
	    </TableLayout>
    </ScrollView>
</LinearLayout>